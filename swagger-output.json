{
  "openapi": "3.0.0",
  "info": {
    "title": "PFS2 - API",
    "description": "API criada utilizando o padrão REST na disciplina de Programação Fullstack 2",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:5000/"
    }
  ],
  "paths": {
    "/usuarios/": {
      "get": {
        "tags": [
          "Usuários"
        ],
        "summary": "Lista os usuários cadastrados",
        "description": "",
        "parameters": [
          {
            "name": "chaveapi",
            "in": "header",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "security": [
          {
            "apiKeyAuth": []
          }
        ]
      },
      "post": {
        "tags": [
          "Usuários"
        ],
        "summary": "Cadastra um usuário no banco de dados",
        "description": "",
        "parameters": [
          {
            "name": "chaveapi",
            "in": "header",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "security": [
          {
            "apiKeyAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/usuarioModel"
              }
            }
          }
        }
      },
      "put": {
        "tags": [
          "Usuários"
        ],
        "summary": "Atualiza todos os atributos de um usuário no banco de dados",
        "description": "",
        "parameters": [
          {
            "name": "chaveapi",
            "in": "header",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "security": [
          {
            "apiKeyAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/usuarioModel"
              }
            }
          }
        }
      }
    },
    "/usuarios/{id}": {
      "get": {
        "tags": [
          "Usuários"
        ],
        "summary": "Retorna um usuário baseado em um id",
        "description": "",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "chaveapi",
            "in": "header",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "security": [
          {
            "apiKeyAuth": []
          }
        ]
      }
    },
    "/usuarios/excluir/{id}": {
      "delete": {
        "tags": [
          "Usuários"
        ],
        "summary": "Exclui um usuário baseado em um id",
        "description": "",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "chaveapi",
            "in": "header",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "security": [
          {
            "apiKeyAuth": []
          }
        ]
      }
    },
    "/usuarios/alterar-email/{id}": {
      "patch": {
        "tags": [
          "Usuários"
        ],
        "summary": "Atualiza apenas o e-mail de um usuário",
        "description": "",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID do usuário a ser alterado"
          },
          {
            "name": "chaveapi",
            "in": "header",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "security": [
          {
            "apiKeyAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "example": "any"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/perfil/": {
      "get": {
        "tags": [
          "Perfil"
        ],
        "summary": "Lista os perfis de acesso",
        "description": "",
        "parameters": [
          {
            "name": "chaveapi",
            "in": "header",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "401": {
            "description": "Unauthorized"
          }
        },
        "security": [
          {
            "apiKeyAuth": []
          }
        ]
      }
    },
    "/login/autenticar": {
      "post": {
        "tags": [
          "Login"
        ],
        "summary": "Gerar token de acesso",
        "description": "",
        "responses": {
          "default": {
            "description": ""
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/loginModel"
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "loginModel": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "teste@teste.com"
          },
          "senha": {
            "type": "string",
            "example": "123"
          }
        }
      },
      "usuarioModel": {
        "type": "object",
        "properties": {
          "usuId": {
            "type": "number",
            "example": 999
          },
          "usuNome": {
            "type": "string",
            "example": "Fulano"
          },
          "usuEmail": {
            "type": "string",
            "example": "teste@teste.com.br"
          },
          "usuSenha": {
            "type": "string",
            "example": "123teste"
          },
          "perfil": {
            "type": "number",
            "example": 1
          }
        }
      }
    },
    "securitySchemes": {
      "apiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "chaveapi",
        "description": "Chave de acesso para a utilização da API"
      }
    }
  }
}